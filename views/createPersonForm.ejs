<% // create a list of javascript files to have the header load %>
<% var js_include = ['create_person.js']; %>
<% include header %>

<!-- Note that this is a post -->
<form id="create_person_form" action="<%= action %>">
    <table id="login">
        <tr><td>First and Last Name:</td>
            <td><input type="text" id="FirstAndLastName" name="FirstAndLastName" /></td>
        </tr>
        <tr><td>Age:</td>
            <td><input type="text" id="Age" name="Age" /></td>
        </tr>
        <tr><td>Start Weight:</td>
            <td><input type="text" id="StartWeight" name="StartWeight"></td>
        </tr>
        <tr><td>Gender:</td>
            <td><input type="text" id="Gender" name="Gender"></td>
        </tr>
    </table>
    <!-- not that we use a button here and not submit -->
    <input type="button" id="createPersonBtn" value="Create" />
</form>

<div id="output" style="margin:10px;display:none"></div>

<% include footer %>